{
    "env": {
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "strict": [2, "global"],
        "indent": [2, 4, { "SwitchCase": 1, "VariableDeclarator": 1 }],
        "quotes": [2, "single", "avoid-escape"]
    }
}
